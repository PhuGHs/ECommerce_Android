<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="246px"
    android:background="@drawable/bg_white_rounded">
    <ImageView
        android:layout_width="155px"
        android:layout_height="129px"
        android:src="@drawable/ic_launcher_background"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:id="@+id/id_of_order"
            android:text="ID: #2050"
            android:textColor="@color/black"
            android:textSize="50px"
            style="@style/header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:id="@+id/title_of_order"
            android:text="Đặt áo cho team"
            android:textColor="@color/black"
            android:textSize="50px"
            style="@style/regularfont"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:id="@+id/timeremain_of_order"
            android:text="Time remaining:       1 day"
            android:textColor="@color/black"
            android:textSize="45px"
            style="@style/regularfont"/>

        <Button
            android:layout_width="284px"
            android:layout_height="120px"
            android:text="Detail"/>
    </LinearLayout>
</LinearLayout>