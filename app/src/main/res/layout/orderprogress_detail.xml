<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50px"
    android:background="@drawable/bg_white_rounded"
    android:paddingLeft="10px">
    <ImageView
        android:layout_width="155px"
        android:layout_height="129px"
        android:layout_marginTop="25px"
        android:id="@+id/image_of_orderprogress"
        android:src="@drawable/orderprogress_image"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="35px"
        android:layout_marginTop="28px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_of_order"
            android:text="ID: #2050"
            android:textColor="@color/black"
            android:textSize="50px"
            style="@style/header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_of_order"
            android:text="Đặt áo cho team"
            android:textColor="@color/black"
            android:textSize="50px"
            style="@style/regularfont"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="32px"
        android:layout_marginTop="28px"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeremain_of_order"
            android:text="Time remaining:       1 day"
            android:textColor="@color/black"
            android:textSize="45px"
            style="@style/font_crimson_italic"/>

        <Button
            android:layout_width="284px"
            android:layout_height="120px"
            android:textAllCaps="false"
            style="@style/w400_40"
            android:textSize="50px"
            android:text="Detail"/>
    </LinearLayout>
</LinearLayout>