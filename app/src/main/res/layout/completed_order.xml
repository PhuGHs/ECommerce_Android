<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_rounded">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="151px"
                android:layout_height="146px"
                android:src="@drawable/ic_launcher_background"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36px"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_of_ordereditem"
                    android:text="Retro Manchester UTD Away 2006/07"
                    style="@style/header"
                    android:textColor="@color/black"
                    android:textSize="40px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35px"
                    android:id="@+id/time_and_quantity_of_ordereditem"
                    android:text="21/05/2023    |       Quantity: 1"
                    style="@style/regularfont"
                    android:textColor="@color/black"
                    android:textSize="40px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_money_ordereditem"
                    android:text="$90.00"
                    android:textSize="50px"
                    android:textColor="#FF3030"
                    style="@style/regularfont"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantity_of_ordereditem_tiengviet"
            android:text="1 sản phẩm"
            style="@style/header"
            android:textColor="#838383"
            android:textSize="40px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="460px"
            android:text="Thành tiền: "
            style="@style/regularfont"
            android:textColor="@color/black"
            android:textSize="45px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19px"
            android:id="@+id/sum_of_ordereditem_tiengviet"
            android:text="$90.00"
            style="@style/regularfont"
            android:textColor="#FF3030"
            android:textSize="50px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_of_feedback"
            android:text="Đang chờ người bán đánh giá"
            style="@style/header"
            android:textColor="#838383"
            android:textSize="40px"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rebuy_btn"
            android:layout_marginLeft="250px"
            android:text="Mua lại"/>
    </LinearLayout>
</LinearLayout>