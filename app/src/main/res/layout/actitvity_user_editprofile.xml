<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.EditProfileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|top">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/back_info"
                    android:layout_marginTop="35px"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:src="@drawable/left_arrow"
                    android:clickable="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:layout_marginTop="20px"
                    style="@style/font_crimson_bold"
                    android:textColor="#A86464"
                    android:textSize="70px"
                    android:gravity="center"/>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="89px">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_of_user"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_customer"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:id="@+id/name_textview"
                android:text="Hoàng Phúc"
                android:textColor="@color/black"
                android:textSize="66px"
                style="@style/header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="85px"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/bg_white_rounded">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:textColor="@color/primary"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginLeft="48dp"
                        android:inputType="textVisiblePassword"
                        android:id="@+id/name_edittext"
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:textColor="@color/primary"
                        android:background="@color/transparent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datebirth: "
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:textColor="@color/primary"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:inputType="textVisiblePassword"
                        android:id="@+id/datebirth_edittext"
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:textColor="@color/primary"
                        android:background="@color/transparent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: "
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:textColor="@color/primary"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="textVisiblePassword|textMultiLine"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:background="@color/transparent"
                        android:id="@+id/address_edittext"
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:textColor="@color/primary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:textColor="@color/primary"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="textVisiblePassword"
                        android:id="@+id/email_edittext"
                        android:layout_marginLeft="50dp"
                        style="@style/font_crimson_regular"
                        android:background="@color/transparent"
                        android:textSize="50px"
                        android:textColor="@color/primary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="500px"
                android:layout_height="130px"
                android:layout_marginTop="100px"
                android:id="@+id/change_ava_btn"
                android:text="Change avatar"
                android:textAllCaps="false"
                style="@style/header"
                android:textColor="@color/white"
                android:textSize="50px"
                android:backgroundTint="#1B9C85"/>

            <Button
                android:layout_width="500px"
                android:layout_height="130px"
                android:layout_marginTop="40px"
                android:id="@+id/edit_profile_btn"
                android:text="Edit profile"
                android:textAllCaps="false"
                style="@style/header"
                android:textColor="@color/white"
                android:textSize="50px"
                android:backgroundTint="#1B9C85"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="112px">
                <Button
                    android:layout_width="420px"
                    android:layout_height="135px"
                    android:layout_marginLeft="69px"
                    android:id="@+id/cancel_btn"
                    android:text="Cancel"
                    style="@style/header"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="50px"
                    android:backgroundTint="@color/primary"/>

                <Button
                    android:layout_width="420px"
                    android:layout_height="135px"
                    android:layout_marginLeft="86px"
                    android:id="@+id/save_btn"
                    android:text="Save"
                    style="@style/header"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="50px"
                    android:backgroundTint="@color/primary"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>