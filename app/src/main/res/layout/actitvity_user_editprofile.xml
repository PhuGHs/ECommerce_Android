<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.EditProfileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|top">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="132px"
                    android:layout_height="143px"
                    android:layout_marginTop="10px"
                    android:layout_marginLeft="10px"
                    android:id="@+id/btn_backtoAccount"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/back_back_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="275px"
                    android:text="Profile"
                    android:textColor="@color/primary"
                    android:textSize="80px"
                    style="@style/header"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="89px">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_of_user"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_customer"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:id="@+id/name_textview"
                android:text="Hoàng Phúc"
                android:textColor="@color/black"
                android:textSize="66px"
                style="@style/header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80px"
                android:paddingLeft="58px"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="970px"
                        android:id="@+id/name_edittext"
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:hint="Name:"
                        android:textColorHint="@color/primary"
                        android:textColor="@color/primary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25px">

                    <EditText
                        android:layout_width="970px"
                        android:id="@+id/datebirth_edittext"
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:hint="Datebirth:"
                        android:textColorHint="@color/primary"
                        android:textColor="@color/primary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



                    <EditText
                        android:layout_width="970px"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25px"
                        android:id="@+id/address_edittext"
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:hint="Address:"
                        android:textColorHint="@color/primary"
                        android:textColor="@color/primary"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25px">
                    <EditText
                        android:layout_width="970px"
                        android:id="@+id/email_edittext"
                        style="@style/font_crimson_regular"
                        android:textSize="50px"
                        android:hint="Email:"
                        android:textColorHint="@color/primary"
                        android:textColor="@color/primary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="500px"
                android:layout_height="130px"
                android:layout_marginTop="100px"
                android:id="@+id/change_ava_btn"
                android:text="Change avatar"
                android:textAllCaps="false"
                style="@style/header"
                android:textColor="@color/black"
                android:textSize="50px"
                android:backgroundTint="#B3E5BE"/>

            <Button
                android:layout_width="500px"
                android:layout_height="130px"
                android:layout_marginTop="40px"
                android:id="@+id/edit_profile_btn"
                android:text="Edit profile"
                android:textAllCaps="false"
                style="@style/header"
                android:textColor="@color/black"
                android:textSize="50px"
                android:backgroundTint="#B3E5BE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="112px">
                <Button
                    android:layout_width="420px"
                    android:layout_height="135px"
                    android:layout_marginLeft="69px"
                    android:id="@+id/cancel_btn"
                    android:text="Cancel"
                    style="@style/header"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="50px"
                    android:backgroundTint="@color/primary"/>

                <Button
                    android:layout_width="420px"
                    android:layout_height="135px"
                    android:layout_marginLeft="86px"
                    android:id="@+id/save_btn"
                    android:text="Save"
                    style="@style/header"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="50px"
                    android:backgroundTint="@color/primary"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>