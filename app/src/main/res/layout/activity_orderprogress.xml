<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_info"
            android:layout_width="132px"
            android:layout_height="143px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            android:backgroundTint="@color/background"
            android:src="@drawable/back_back_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="160px"
            android:text="Order Progress"
            android:textColor="@color/primary"
            android:textSize="80px"
            style="@style/header"/>
    </LinearLayout>

    <SearchView
        android:id="@+id/search_bar_orderprogress"
        android:background="@drawable/bg_white_rounded"
        android:layout_marginTop="90px"
        android:layout_width="948px"
        android:layout_height="wrap_content"
        android:queryHint="Search your order..."
        android:iconifiedByDefault="false"
        style="@style/font_crimson_regular"
        android:queryBackground="@color/white"
        android:submitBackground="@drawable/bg_white_rounded"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_orderprogress"
        android:layout_marginTop="80px"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

</LinearLayout>