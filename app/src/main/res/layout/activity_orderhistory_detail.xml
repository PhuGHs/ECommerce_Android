<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back_info"
                    android:layout_width="132px"
                    android:layout_height="143px"
                    android:layout_marginTop="10px"
                    android:layout_marginLeft="10px"
                    android:backgroundTint="@color/background"
                    android:src="@drawable/back_back_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="70px"
                    android:text="Order History Detail"
                    android:textColor="@color/primary"
                    android:textSize="80px"
                    style="@style/header"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="60px"
                android:paddingLeft="30px"
                android:background="#1B9C85">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35px"
                    style="@style/font_crimson_regular"
                    android:textColor="@color/white"
                    android:text="Order has been completed"
                    android:textSize="70px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/completedorder_icon"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30px"
                android:paddingTop="30px"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/truck_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_crimson_bold"
                            android:text="Delivery Information"
                            android:textSize="50px"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:id="@+id/type_of_delivery"
                            style="@style/font_crimson_regular"
                            android:text="HPVP Express"
                            android:textSize="50px"
                            android:textColor="#838383"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle_green_icon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20px"
                                style="@style/font_crimson_regular"
                                android:text="Order was delivered successfully"
                                android:textSize="40px"
                                android:textColor="#1B9C85"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:id="@+id/day_of_delivery"
                            style="@style/font_crimson_regular"
                            android:text="20/05/2023"
                            android:textSize="50px"
                            android:textColor="#838383"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30px"
                android:paddingTop="30px"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/map_marked_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_crimson_bold"
                            android:text="Recepient's Information"
                            android:textSize="50px"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:id="@+id/name_of_recep_delivery"
                            style="@style/font_crimson_regular"
                            android:text="PhÃºc Du"
                            android:textSize="50px"
                            android:textColor="#838383"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:id="@+id/numberphone_of_recep_delivery"
                            style="@style/font_crimson_regular"
                            android:text="0812345678"
                            android:textSize="50px"
                            android:textColor="#838383"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:layout_marginBottom="20px"
                            android:id="@+id/address_of_recep_delivery"
                            style="@style/font_crimson_regular"
                            android:text="43 Tan Lap, Binh Duong"
                            android:textSize="50px"
                            android:textColor="#838383" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:paddingRight="35px"
                android:layout_marginTop="40px"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/w600_50"
                    android:text="Ordered Product List"
                    android:textSize="50px"
                    android:textColor="#FF0303"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:id="@+id/orderhistory_detail_list"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>