<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="25dp"
    android:background="@color/bg_primary"
    android:paddingTop="29dp">

    <!--    Header  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="16dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_back_34" />
        <TextView
            android:id="@+id/customer_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Customer List"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/primary"/>
        
        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/round_avatar"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/avatar_customer"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>
    
    <!--    Search Bar  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="Search for ..."
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/round_search_bar"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            />

        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/round_search"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_search_white_24"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:padding="7dp"
            />
        
    </RelativeLayout>

    <!--    Body    -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <!--    Customer Component  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/round_item_customer"
            android:layout_marginBottom="13dp"
            >
            
            <ImageView
                android:id="@+id/image_customer"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerVertical="true"
                android:src="@drawable/avatar_customer"
                android:scaleType="centerCrop"
                android:background="@drawable/round_avatar"
                android:clipToOutline="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/name_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_alignTop="@id/image_customer"
                android:layout_toEndOf="@id/image_customer"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:text="Tran Tuan Vu"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_customer"
                android:layout_toEndOf="@id/image_customer"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="-5dp"
                android:text="trantuanvu@gmail.com"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

    </ScrollView>


</LinearLayout>