<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.admin_fragments.AdminOrderedListFragment"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:id="@+id/header_title"
            style="@style/font_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Order list"
            android:textColor="@color/primary"
            android:textSize="35dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/searchview_bg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="70dp"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_search_24"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:tint="@color/background"/>
            <EditText
                android:id="@+id/etSearchText"
                android:layout_toEndOf="@id/searchIcon"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Click here to find orders ..."
                android:textColor="#454545"
                android:foregroundTint="@color/background"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                style="@style/font_medium"
                android:textSize="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/btnFilter"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filter"
            app:tint="@color/primary"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        style="@style/font_medium"
        android:textSize="20dp"
        android:id="@+id/tvFoundText"
        android:layout_below="@id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found 2 results"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rclOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFoundText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout>