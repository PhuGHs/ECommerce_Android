<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rounded"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:layout_marginBottom="15dp">
    <ImageView
        android:layout_width="252px"
        android:layout_height="252px"
        android:id="@+id/image_item_orderprogress_detail"
        android:src="@drawable/mc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_of_itemorder"
            android:text="Manchester UTD Away 2006 07"
            android:textSize="50px"
            android:textColor="@color/primary"
            style="@style/header"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_of_order"
                android:text="$14.99"
                android:textSize="60px"
                android:textColor="@color/primary"
                style="@style/header"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quantity_of_order"
                    android:text="Quantity:     1"
                    android:textSize="60px"
                    android:textColor="@color/primary"
                    style="@style/header"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>