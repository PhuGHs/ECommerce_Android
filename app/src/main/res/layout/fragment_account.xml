<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top|center"
    tools:context=".fragments.AccountFragment"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textColor="@color/primary"
        style="@style/header"
        android:textSize="64px"
        android:layout_marginTop="40px"/>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="23px"
        android:layout_marginBottom="12px"
        app:cardCornerRadius="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_of_user"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_customer"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_tv"
        android:layout_marginBottom="22dp"
        android:text="Hoang Phuc"
        android:textColor="@color/black"
        android:textSize="64px"
        style="@style/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background"
        android:paddingLeft="50px">
        <LinearLayout
            android:layout_width="300px"
            android:layout_height="350px"
            android:id="@+id/btn_voucher"
            android:orientation="vertical"
            android:gravity="top|center"
            android:background="@color/white">
            <ImageView
                android:layout_width="166px"
                android:layout_height="172px"
                android:src="@drawable/voucher_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher"
                style="@style/regularfont"
                android:layout_marginTop="20px"
                android:textSize="50px"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_voucher"
                android:text="3"
                style="@style/regularfont"
                android:textSize="64px"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300px"
            android:layout_height="350px"
            android:layout_marginLeft="40px"
            android:id="@+id/btn_orderprogress"
            android:orientation="vertical"
            android:gravity="top|center"
            android:background="@color/white">
            <ImageView
                android:layout_width="166px"
                android:layout_height="172px"
                android:src="@drawable/delivery_order"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Progress"
                style="@style/regularfont"
                android:layout_marginTop="20px"
                android:textSize="50px"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_order_progress"
                android:text="10+"
                style="@style/regularfont"
                android:textSize="64px"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300px"
            android:layout_height="350px"
            android:layout_marginLeft="40px"
            android:id="@+id/btn_feedback"
            android:orientation="vertical"
            android:gravity="top|center"
            android:background="@color/white">
            <ImageView
                android:layout_width="166px"
                android:layout_height="172px"
                android:src="@drawable/like_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="Feedback"
                style="@style/regularfont"
                android:textSize="50px"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_feedback"
                android:text="5"
                style="@style/regularfont"
                android:textSize="64px"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
    <!--    Option  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <!--    Customer Management -->
        <RelativeLayout
            android:id="@+id/btn_profile"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="35dp"
            android:layout_height="43dp"
            android:background="@drawable/bg_white_rounded"
            android:layout_marginBottom="23dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/profile_icon"
                android:scaleType="centerCrop"
                android:layout_marginStart="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="6dp"
                style="@style/w600_50"
                android:text="Profile"
                android:textColor="@color/primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_next_icon" />

        </RelativeLayout>

        <!--    Statistics Management -->
        <RelativeLayout
            android:id="@+id/btn_recep_info"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginHorizontal="35dp"
            android:layout_below="@+id/btn_profile"
            android:background="@drawable/bg_white_rounded"
            android:layout_marginBottom="23dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/shopping_cart_icon"
                android:scaleType="centerCrop"
                android:layout_marginStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="6dp"
                style="@style/w600_50"
                android:text="Recepient's information"
                android:textColor="@color/primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_next_icon" />

        </RelativeLayout>

        <!--    Order History Management -->
        <RelativeLayout
            android:id="@+id/btn_orderhistory"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="35dp"
            android:layout_height="43dp"
            android:layout_below="@+id/btn_recep_info"
            android:background="@drawable/bg_white_rounded"
            android:layout_marginBottom="23dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/history_icon"
                android:scaleType="centerCrop"
                android:layout_marginStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="6dp"
                style="@style/w600_50"
                android:text="Order History"
                android:textColor="@color/primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_next_icon" />

        </RelativeLayout>

        <!--    Promotion Management -->
        <RelativeLayout
            android:id="@+id/btn_chat_with_admin"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginHorizontal="35dp"
            android:layout_below="@+id/btn_orderhistory"
            android:background="@drawable/bg_white_rounded"
            android:layout_marginBottom="23dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/chat_icon"
                android:scaleType="centerCrop"
                android:layout_marginStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="6dp"
                style="@style/w600_50"
                android:text="Chat with admin"
                android:textColor="@color/primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_next_icon" />

        </RelativeLayout>

        <!--    Log out Management -->
        <RelativeLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginHorizontal="35dp"
            android:layout_below="@+id/btn_chat_with_admin"
            android:background="@drawable/bg_white_rounded">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/logout_icon"
                android:scaleType="centerCrop"
                android:layout_marginStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="6dp"
                style="@style/w600_50"
                android:text="Log out"
                android:textColor="@color/primary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_next_icon" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>