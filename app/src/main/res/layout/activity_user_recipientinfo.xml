<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_info"
            android:layout_width="132px"
            android:layout_height="143px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            android:backgroundTint="@color/background"
            android:src="@drawable/back_back_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="15px"
            android:text="Recipient's Information"
            android:textColor="@color/primary"
            android:textSize="80px"
            style="@style/header"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="125px"
            android:layout_height="100px"
            android:layout_marginTop="110px"
            android:layout_marginLeft="46px"
            android:id="@+id/add_btn"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/primary"
            android:src="@drawable/add_ic"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="125px"
            android:layout_height="100px"
            android:layout_marginTop="110px"
            android:layout_marginLeft="46px"
            android:id="@+id/delete_btn"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/primary"
            android:src="@drawable/delete_ic"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66px"
        android:orientation="vertical"
        android:paddingLeft="50px"
        android:paddingRight="50px">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recepinfo_rcv_recepient_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            />
    </ScrollView>

</LinearLayout>