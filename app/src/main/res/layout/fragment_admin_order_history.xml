<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="25dp"
    android:background="@color/bg_primary"
    android:paddingTop="29dp">

    <!--    Header  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="14dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_back_34" />

        <TextView
            android:id="@+id/customer_list_title"
            style="@style/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Order History"
            android:textColor="@color/primary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/round_avatar"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/avatar_customer"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>

    <!--    Search Bar  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="text"
            style="@style/w400_50"
            android:text="Amos Ivor"
            android:textColor="@color/black"
            android:hint="Search for ..."
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/round_search_bar"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            />

        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/round_search"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_search_white_24"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:padding="7dp"
            />

    </RelativeLayout>

    <!--    Calendar    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/calendar_container"
            android:layout_width="297dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_calendar">

            <ImageView
                android:id="@+id/order_history_left_ic_calendar_order_history"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/baseline_calendar"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/order_history_left_ic_calendar_order_history"
                android:text="11/09/2021"
                android:textColor="@color/black"
                style="@style/w400_40" />

            <ImageView
                android:id="@+id/ic_arrow_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_right_arrow" />

            <ImageView
                android:id="@+id/order_history_right_ic_calendar_order_history"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toEndOf="@id/ic_arrow_order_history"
                android:src="@drawable/baseline_calendar"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/order_history_right_ic_calendar_order_history"
                android:text="11/09/2021"
                android:textColor="@color/black"
                style="@style/w400_40" />

        </RelativeLayout>

        <!--        Filter        -->
        <ImageView
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_filter"
            android:background="@drawable/round_filter"
            android:padding="6dp"/>

    </RelativeLayout>

    <!--    Order List  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <!--    Order Component     -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/round_item_order">

            <TextView
                android:id="@+id/order_history_component_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/w600_50"
                android:text="Order #09117147"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp" />

            <TextView
                android:id="@+id/order_history_component_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/order_history_component_ic_calendar"
                android:layout_marginTop="13dp"
                android:text="17 Dec, 2022"
                android:textColor="@color/black"
                style="@style/w600_40" />

            <ImageView
                android:id="@+id/order_history_component_ic_calendar"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="13dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_calendar"
                android:layout_marginStart="13dp" />

            <TextView
                android:id="@+id/order_history_component_customer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Info"
                android:textColor="@color/primary"
                style="@style/w600_40"
                android:layout_marginStart="55dp"
                android:layout_below="@id/order_history_component_title"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/order_history_component_name_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ms. Phuc Du"
                android:textColor="@color/black"
                style="@style/w600_40"
                android:layout_marginStart="55dp"
                android:layout_below="@id/order_history_component_customer_info"
                android:layout_marginTop="2dp"/>

            <ImageView
                android:id="@+id/order_history_component_avatar_customer"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/round_avatar"
                android:layout_toEndOf="@+id/order_history_component_name_customer"
                android:layout_below="@id/order_history_component_customer_info"
                android:layout_marginTop="2dp"
                android:layout_marginStart="26dp"
                android:src="@drawable/avatar_customer"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/order_history_component_phone_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0332541875"
                android:textColor="@color/black"
                style="@style/w400_40"
                android:layout_marginStart="55dp"
                android:layout_below="@id/order_history_component_name_customer"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/order_history_component_address_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47 Tan Lap, Dong Hoa, Di An, Binh Duong"
                android:textColor="@color/text_sub_color"
                style="@style/w400_40"
                android:layout_marginStart="55dp"
                android:layout_below="@id/order_history_component_phone_customer"
                android:layout_marginTop="2dp"/>
            
            <ImageView
                android:id="@+id/order_history_component_icon_phone"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_below="@+id/order_history_component_address_customer"
                android:src="@drawable/baseline_phone"
                android:background="@drawable/round_phone"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/order_history_component_icon_message"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_below="@+id/order_history_component_address_customer"
                android:layout_toEndOf="@id/order_history_component_icon_phone"
                android:src="@drawable/baseline_message"
                android:background="@drawable/round_phone"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

        </RelativeLayout>

    </RelativeLayout>
    
</LinearLayout>