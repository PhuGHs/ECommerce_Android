<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:id="@+id/search_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="@id/homeRight"
        app:layout_constraintStart_toStartOf="@id/homeLeft"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            app:iconifiedByDefault="false"
            app:queryBackground="@color/white"
            app:queryHint="Bạn tìm gì hôm nay ..."
            app:searchIcon="@drawable/baseline_search_24"
            app:submitBackground="@drawable/bg_white_rounded" />

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:layout_gravity="end"
            android:layout_marginStart="4dp">

            <!-- Menu Item Image -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:src="@drawable/outline_shopping_cart_24" />

            <!-- Badge Count -->
            <TextView
                android:id="@+id/actionbar_notifcation_textview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/cart_button_bg"
                android:elevation="4dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="100"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/heroTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/homeLeft"
        app:layout_constraintTop_toTopOf="@id/heroImageTop"
        android:text="Bạn là fan Manchester United?"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <ImageView
        app:layout_constraintStart_toStartOf="@id/homeLeft"
        app:layout_constraintEnd_toEndOf="@id/homeRight"
        app:layout_constraintTop_toTopOf="@id/heroTitle"
        app:layout_constraintBottom_toBottomOf="@id/heroImageBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_favorite_border_24"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/homeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/homeRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="380dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/heroImageTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/heroImageBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="300dp" />

</androidx.constraintlayout.widget.ConstraintLayout>