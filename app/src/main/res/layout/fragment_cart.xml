<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEAEF"
    tools:context=".fragments.CartFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBackToHome"
            android:layout_marginTop="35px"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/left_arrow"
            android:clickable="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:layout_marginTop="20px"
            style="@style/font_crimson_bold"
            android:textColor="#A86464"
            android:textSize="70px"
            android:gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listCart"
            android:layout_margin="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textEmptyCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="730px"
            style="@style/font_crimson_italic"
            android:text="Empty cart!!"
            android:textSize="70px"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/imgEmptyCart"
            android:layout_marginTop="300px"
            android:layout_marginLeft="300px"
            android:layout_width="400px"
            android:layout_height="430px"
            android:background="@color/transparent"
            android:src="@drawable/empty_cart"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="60px"
        android:background="@drawable/bg_white_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="40px"
            android:layout_marginTop="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                style="@style/font_crimson_bold"
                android:textSize="70px"
                android:textColor="@color/black"
                android:text="Total"/>
            <View
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/totalItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                style="@style/font_crimson_italic"
                android:textSize="50px"
                android:textColor="@color/black"
                android:text="(0 item)"/>
            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40px"
                style="@style/font_crimson_bold"
                android:textSize="70px"
                android:textColor="@color/black"
                android:text="$0.00"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnNavToCheckout"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:background="@drawable/bg_brown_rounded"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginBottom="25px"
            android:textAllCaps="false"
            android:text="Proceed to checkout"
            android:textSize="60px"
            style="@style/font_crimson_bold"/>
    </LinearLayout>
</LinearLayout>