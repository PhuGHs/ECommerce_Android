<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_info"
            android:layout_width="132px"
            android:layout_height="143px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            android:backgroundTint="@color/background"
            android:src="@drawable/back_back_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="235px"
            android:text="Feedback"
            android:textColor="@color/primary"
            android:textSize="80px"
            style="@style/header"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="100px"
        android:text="Do you like our product?"
        style="@style/header"
        android:textColor="@color/primary"
        android:textSize="60px"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/write_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:background="@color/white"
        android:hint="Your feedback here..."
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:layout_marginLeft="260px"
        android:background="@drawable/bg_white_rounded"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please rate your experience"
            android:textSize="50px"
            android:textColor="@color/black"
            style="@style/header"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="125px"/>
    </LinearLayout>

    <Button
        android:layout_width="800px"
        android:layout_height="200px"
        android:textSize="70px"
        android:layout_marginTop="100px"
        android:layout_marginLeft="150px"
        style="@style/regularfont"
        android:textAllCaps="false"
        android:text="Send feedback"/>
</LinearLayout>